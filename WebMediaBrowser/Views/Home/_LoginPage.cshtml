@model WebMediaBrowser.Models.UserViewDTO

@{
//ViewBag.Title = "Login";
}
<h2 class="text-center">Please sign-in to continue:</h2>
<h3>@*@ViewBag.Message*@</h3>

<style>
    .border {
        border: 1px solid black;
    }

    .main-div {
        width: 550px;
        height: 400px;
        background-image: url(../../Assets/background.jpg);
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;
        margin-left: auto;
        margin-right: auto;
    }

    .title {
        color: white;
        font-family: 'Microsoft Sans Serif';
        font-size: 15pt;
        font-weight: bold;
    }

    .user-details {
        width: 250px;
        height: 190px;
        background-color: rgb(140, 197, 255);
        margin-top: 30px;
        flex-direction: column;
        justify-content: center;
        text-align: left;
        align-self: center;
        padding: 10px;
    }

    .submittion {
        display: flex;
        justify-content: space-between;
        text-align: center;
    }

    .warning {
        color: red;
        font-family: Arial;
        font-size: 12px;
        margin: 5px;
        visibility: hidden;
    }
</style>

@using (Html.BeginForm("Create", "Movies", FormMethod.Post))
{
    <div class="main-div">
        <h1 class="title">Sign-in to continue</h1>
        <div class="user-details">
            <div class="row">
                <div class="col-md-12">
                    Username: <input class="form-control" type="text" name="username" />
                </div>
                <div class="col-md-12">
                    password: <input class="form-control" type="password" name="password" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 warning text-center">This is a warning label</div>
            </div>
            <div class="row">
                <div class="row submittion text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="reset" name="cancel" value="cancel" class="btn btn-white">Clear</button>
                </div>
            </div>
        </div>
    </div>
}

